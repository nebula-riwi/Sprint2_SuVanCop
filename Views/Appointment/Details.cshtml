@model SuVanCop.Models.Appointment

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-calendar-check me-2"></i> Detalle de la Cita</h4>
        </div>
        <div class="card-body px-4 py-5">
            <div class="row g-4 align-items-start">
                <!-- Columna izquierda: datos -->
                <div class="col-md-12">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">🆔 ID</div>
                        <div class="col-sm-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">📅 Fecha</div>
                        <div class="col-sm-8">@Model.Date.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">⏰ Hora</div>
                        <div class="col-sm-8">@Model.Hour.ToString(@"hh\:mm")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">👨‍⚕️ Doctor</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info text-dark px-3 py-1">@Model.Doctor?.Names</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">🧑 Paciente</div>
                        <div class="col-sm-8">
                            <span class="badge bg-secondary text-white px-3 py-1">@Model.User?.Names</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex flex-wrap justify-content-end gap-2 px-4 py-3 bg-light rounded-bottom-4">
            <a asp-action="Index" asp-controller="Appointment" class="btn btn-outline-secondary rounded-pill px-3">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning rounded-pill px-3">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
        </div>
    </div>
</div>
