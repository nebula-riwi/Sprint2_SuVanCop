@{
    ViewData["Title"] = "Turno Generado";
    var turnCode = ViewData["TurnCode"]?.ToString() ?? "N/A";
}

<div class="text-center mt-5">
    <h1 class="text-success">¡SU TURNO HA SIDO GENERADO!</h1>
    
    <div class="card p-5 mx-auto mt-4" style="max-width: 400px; border: 4px solid #007bff;">
        <p class="mb-0" style="font-size: 1.5em; color: #6c757d;">Su número de turno es:</p>
        <h2 id="turnDisplay" style="font-size: 5em; font-weight: 900; color: #dc3545;">
            @turnCode
        </h2>
    </div>

    <p class="mt-4 lead">
        Por favor, espere su llamado. <br>
        ¡Gracias por su visita!
    </p>

    <a asp-controller="Turns" asp-action="Create" class="btn btn-secondary mt-4">Generar otro turno</a>
    
    <button onclick="window.print()" class="btn btn-dark mt-4">Imprimir Ticket</button>

</div>
