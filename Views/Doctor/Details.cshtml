@model SuVanCop.Models.Doctor

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-badge me-2"></i> Detalle del Doctor</h4>
        </div>
        <div class="card-body px-4 py-5">
            <div class="row g-4 align-items-center">
                <!-- Columna izquierda: datos -->
                <div class="col-md-8">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">🆔 ID</div>
                        <div class="col-sm-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">👤 Nombres</div>
                        <div class="col-sm-8">@Model.Names</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">👥 Apellidos</div>
                        <div class="col-sm-8">@Model.LastNames</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">🧾 NUIP</div>
                        <div class="col-sm-8">@Model.Nuip</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-semibold text-secondary">🩺 Especialidad</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info text-dark px-3 py-1">@Model.Speciality</span>
                        </div>
                    </div>
                </div>

                <!-- Columna derecha: imagen circular si existe -->
                
            </div>
        </div>

        <div class="card-footer d-flex flex-wrap justify-content-end gap-2 px-4 py-3 bg-light rounded-bottom-4">
            <a asp-action="Index" asp-controller="Doctor" class="btn btn-outline-secondary rounded-pill px-3">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning rounded-pill px-3">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Destroy" asp-route-id="@Model.Id" class="btn btn-outline-danger rounded-pill px-3">
                <i class="bi bi-trash me-1"></i> Eliminar
            </a>
        </div>
    </div>
</div>
